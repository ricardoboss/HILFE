{
  "scripts": {
    "browser-livereload": "browser-sync start --server _site/ --port 8080 --files='_site/*'",
    "watch": "start /min npm run browser-livereload & npm-watch build",
    "build": "docfx build"
  },
  "watch": {
    "build": {
      "patterns": [
        "./*"
      ],
      "extensions": "md,yml",
      "quiet": false,
      "ignore": "_site/*",
      "delay": 500
    }
  },
  "devDependencies": {
    "browser-sync": "^2.27.11",
    "npm-watch": "^0.11.0"
  }
}
