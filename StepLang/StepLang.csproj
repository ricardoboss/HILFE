      <Compile Remove="Framework\Conversion\ToRadixFunction.cs" />
      <Compile Remove="Framework\Conversion\ToTypeNameFunction.cs" />
      <Compile Remove="Framework\Conversion\ToValuesFunction.cs" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="Statements\**" />
      <EmbeddedResource Remove="Framework\Mutating\**" />
      <EmbeddedResource Remove="Framework\Other\**" />
    </ItemGroup>

    <Target Name="Copy DLLs to Homepage" AfterTargets="Build">
        <PropertyGroup>
            <HomepageBinDir>$(SolutionDir)StepLang.Homepage\bin</HomepageBinDir>
        </PropertyGroup>

        <ItemGroup>
            <BuiltDlls Include="bin/**/*.dll" />
        </ItemGroup>

        <Copy SourceFiles="@(BuiltDlls)" DestinationFolder="$(HomepageBinDir)\%(RecursiveDir)" SkipUnchangedFiles="false" />
        <Message Text="Copied @(BuiltDlls) to $(HomepageBinDir)" Importance="high" />
    </Target>
</Project>
